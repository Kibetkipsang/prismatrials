generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}


model Department{
  id String @id @default(uuid()) @map("DepartmentId")
  departmentName String @unique @map("DepartmentName")
  location String @map("DepartmentLocation")
  employees Employee[]

  @@map("Departments")
}

model Employee{
  id String @id @default(uuid()) @map("EmployeeId")
  firstName String @map("FirstName")
  lastName String @map("LastName")
  email String @map("EmailAddress")
  salary Decimal @map("EmployeeSalary")
  departmentId String @map("DepartmentId")
  department Department @relation(fields: [departmentId], references: [id])

  @@map("Employees")
}